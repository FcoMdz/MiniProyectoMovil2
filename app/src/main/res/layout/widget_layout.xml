<?xml version="1.0" encoding="utf-8"?>

<GridLayout android:layout_width="match_parent"
    android:layout_height="80dip"
    android:columnCount="5"
    android:rowCount="2"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/degradado">


            <ImageView android:id="@+id/img_cancion"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/no_music"
                android:layout_column="0"
                android:layout_columnSpan="1"
                android:layout_rowSpan="2"/>

            <TextView android:id="@+id/txt_nombreCancion"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="No se ha seleccionado una canciÃ³n"
                android:textAlignment="center"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_columnSpan="3"
                android:textColor="@color/white"
                />



            <ImageView android:id="@+id/btn_prev"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:src="@drawable/btn_left"
                android:layout_rowSpan="1"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:background="@color/newBlack"
                
                />
            <ImageView android:id="@+id/btn_play"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:src="@drawable/btn_play"
                android:layout_rowSpan="2"
                android:background="@color/newBlack"
                android:layout_columnWeight="1"
                />
            <ImageView android:id="@+id/btn_next"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:src="@drawable/btn_right"
                android:layout_columnWeight="1"
                android:background="@color/newBlack"
                />
    </GridLayout>
